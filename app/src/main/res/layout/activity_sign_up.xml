<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.view.signup.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <Button
        android:id="@+id/bttnSignUpStudent"
        android:layout_width="290dp"
        android:layout_height="44dp"
        android:layout_marginTop="65dp"
        android:layout_gravity="center"
        android:text="@string/signup_student"
       />

    <Button
        android:id="@+id/bttnSignUpTeacher"
        android:layout_width="290dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="@string/signup_teacher"
        />

    <Button
        android:id="@+id/change_to_login"
        android:layout_width="233dp"
        android:layout_height="58dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="@string/change_entrance_option"
        app:backgroundTint="#00BCD4"
        />
    </LinearLayout>
</RelativeLayout>