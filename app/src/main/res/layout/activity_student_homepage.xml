<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.view.homepage.studentHomepage.StudentHomepageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="222dp"
            android:layout_height="173dp"
            android:layout_gravity="center"
            android:background="#00FFFFFF"
            android:contentDescription="@string/app_name"
            android:src="@drawable/transparentlogo" />

        <Button
            android:id="@+id/participate_in_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/participate_in_quiz"
            android:textSize="24sp"
            app:backgroundTint="#B50606" />

        <Button
            android:id="@+id/register_to_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/register_to_course"
            android:textColorLink="#DFEF3B3B"
            android:textSize="24sp"
            app:backgroundTint="#FF9800" />

        <Button
            android:id="@+id/my_courses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="@string/my_courses"
            android:textColorLink="#DFEF3B3B"
            android:textSize="24sp"
            app:backgroundTint="#0C6D63" />

        <Button
            android:id="@+id/my_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/my_results"
            android:textColorLink="#DFEF3B3B"
            android:textSize="24sp"
            app:backgroundTint="#0B2A75" />

        <Button
            android:id="@+id/my_saved_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/my_saved_questions"
            android:textColorLink="#DFEF3B3B"
            android:textSize="24sp"
            app:backgroundTint="#9C27B0" />

        <Button
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/exit"
            android:textSize="24sp"
            app:backgroundTint="#572E8A" />
    </LinearLayout>
</ScrollView>